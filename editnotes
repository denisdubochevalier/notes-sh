#!/bin/bash

notes_dir="${HOME}/Documents/Notes"

mkdir -p "${notes_dir}"
files=()
files+=("New note")
for file in $(ls "${notes_dir}"); do
  files+=($file)
done

file=$(printf '%s\n' "${files[@]}"| wmenu -N272727 -nc2d89c -M668f31 -mc2d89c -S668f31 -sc2d89c -p Notes)
if [[ "$file" = "" ]]; then
  exit
elif [[ "$file" = "New note" ]]; then
  echo "New note"
  kitty -e nvim "${notes_dir}/$(date +%F_%H-%M-%S).md"
else
  kitty -e nvim "${notes_dir}/$file"
fi
