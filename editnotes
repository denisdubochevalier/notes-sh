#!/bin/bash

notes_dir="${HOME}/Documents/Notes"

mkdir -p "${notes_dir}"
files=()
files+=("New note")
for file in $(ls "${notes_dir}"); do
  files+=($file)
done

file=$(printf '%s\n' "${files[@]}"| wmenu -Nefefef -n252525 -M252525 -mefefef -S252525 -sefefef -p Notes)
if [[ "$file" = "" ]]; then
  exit
elif [[ "$file" = "New note" ]]; then
  echo "New note"
  foot -e nvim "${notes_dir}/$(date +%F_%H-%M-%S).md"
else
  foot -e nvim "${notes_dir}/$file"
fi
